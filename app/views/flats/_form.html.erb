<%= simple_form_for(flat) do |f| %>
  <%= f.input :name, label: 'Flat name', error: 'Name is mandatory, please specify one' %>
  <%= f.input :address %>
  <%= f.input :picture_url, hint: 'Try use JPEG pictures' %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests, collection: 1..5 %>
  <%= f.input :stars, collection: 1..5 %>
  <%= f.input :pet_friendly, :input_html => { :checked => false } %>
  <%= f.submit class: "btn btn-primary" %>
  <%= link_to "Back", flats_path, class: 'btn btn-danger' %>
<% end %>
